@{
    ViewData["Title"] = "Upload Document";
}
<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Upload Supporting Document</h5>
        <form>
            <div class="row g-3">
                <div class="col-md-8">
                    <label class="form-label">File</label>
                    <input type="file" class="form-control" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Linked Claim</label>
                    <select class="form-select">
                        <option>Aug 2025</option>
                        <option>Jul 2025</option>
                    </select>
                </div>
            </div>
            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="button" class="btn btn-primary"><i class="bi bi-upload"></i> Upload</button>
            </div>
        </form>
    </div>
</div>
