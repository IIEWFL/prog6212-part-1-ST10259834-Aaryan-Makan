@{
    ViewData["Title"] = "Dashboard";
}
<div class="row g-3">
    <div class="col-md-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-journal-text fs-3 text-primary me-3"></i>
                    <div>
                        <div class="small text-muted">My Claims</div>
                        <div class="fs-5 fw-semibold">8 total</div>
                    </div>
                </div>
                <a asp-controller="Claims" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-hourglass-split fs-3 text-warning me-3"></i>
                    <div>
                        <div class="small text-muted">Pending Approval</div>
                        <div class="fs-5 fw-semibold">2</div>
                    </div>
                </div>
                <a asp-controller="Approvals" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-check-circle fs-3 text-success me-3"></i>
                    <div>
                        <div class="small text-muted">Approved</div>
                        <div class="fs-5 fw-semibold">5</div>
                    </div>
                </div>
                <a asp-controller="Claims" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <div class="d-flex align-items-center">
                    <i class="bi bi-paperclip fs-3 text-info me-3"></i>
                    <div>
                        <div class="small text-muted">Documents</div>
                        <div class="fs-5 fw-semibold">12 files</div>
                    </div>
                </div>
                <a asp-controller="Documents" asp-action="Index" class="stretched-link"></a>
            </div>
        </div>
    </div>
</div>

<div class="card mt-4 shadow-sm">
    <div class="card-header bg-white">
        <div class="d-flex justify-content-between align-items-center">
            <h5 class="mb-0">Recent Claims</h5>
            <a class="btn btn-sm btn-primary" asp-controller="Claims" asp-action="Create">
                <i class="bi bi-plus-lg"></i> New Claim
            </a>
        </div>
    </div>
    <div class="table-responsive">
        <table class="table align-middle mb-0">
            <thead class="table-light">
                <tr>
                    <th>Period</th>
                    <th>Hours</th>
                    <th>Rate</th>
                    <th>Amount</th>
                    <th>Status</th>
                    <th class="text-end">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var row in new[] {
                                new {Period="Aug 2025", Hours="14.0", Rate="R450", Amount="R6 300", Status="Submitted"},
                                new {Period="Jul 2025", Hours="18.0", Rate="R450", Amount="R8 100", Status="Approved"},
                                new {Period="Jun 2025", Hours="10.0", Rate="R450", Amount="R4 500", Status="Rejected"}
                                })
                {
                    <tr>
                        <td>@row.Period</td>
                        <td>@row.Hours</td>
                        <td>@row.Rate</td>
                        <td>@row.Amount</td>
                        <td>@await Html.PartialAsync("_StatusBadge", row.Status)</td>
                        <td class="text-end">
                            <a class="btn btn-sm btn-outline-secondary" asp-controller="Claims" asp-action="Details"><i class="bi bi-eye"></i> View</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
