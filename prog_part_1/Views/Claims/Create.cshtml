@{
    ViewData["Title"] = "New Claim";
}
<div class="card shadow-sm">
    <div class="card-header bg-white">
        <h5 class="mb-0"><i class="bi bi-journal-plus"></i> Submit Monthly Claim</h5>
    </div>
    <div class="card-body">
        <form>
            <div class="row g-3">
                <div class="col-md-4">
                    <label class="form-label">Month</label>
                    <select class="form-select">
                        <option>August</option>
                        <option>July</option>
                        <option>June</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Year</label>
                    <select class="form-select">
                        <option>2025</option>
                        <option>2024</option>
                    </select>
                </div>
                <div class="col-md-4">
                    <label class="form-label">Hourly Rate (R)</label>
                    <input type="number" class="form-control" placeholder="450" />
                </div>
                <div class="col-md-4">
                    <label class="form-label">Hours Worked</label>
                    <input type="number" step="0.5" class="form-control" placeholder="e.g. 12.5" />
                </div>
                <div class="col-md-8">
                    <label class="form-label">Comment</label>
                    <input class="form-control" placeholder="Optional note to coordinator" />
                </div>
                <div class="col-12">
                    <label class="form-label">Supporting Documents</label>
                    <div class="input-group">
                        <input type="file" class="form-control" />
                        <button class="btn btn-outline-secondary" type="button"><i class="bi bi-upload"></i> Upload</button>
                    </div>
                    <div class="form-text">Uploads are illustrative only in this prototype.</div>
                </div>
            </div>

            <div class="d-flex justify-content-end gap-2 mt-4">
                <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                <button type="button" class="btn btn-primary"><i class="bi bi-send"></i> Submit Claim</button>
            </div>
        </form>
    </div>
</div>
