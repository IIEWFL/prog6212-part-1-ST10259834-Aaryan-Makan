@{
    var title = ViewData["Title"] as string ?? "CMCS";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@title · CMCS</title>

    <!-- Bootstrap & Icons -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css" />
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600&display=swap" rel="stylesheet">
    <!-- Site theme -->
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <meta name="theme-color" content="#6d28d9" />
</head>
<body class="theme-candy">
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark navbar-gradient shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-controller="Home" asp-action="Index">
                    <span class="brand-badge"><i class="bi bi-clipboard2-check"></i></span>
                    <span class="fw-semibold">CMCS</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#cmcsNav">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="cmcsNav">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0 nav-underline">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Home">
                                <i class="bi bi-house-door me-1"></i> Home
                            </a>
                        </li>

                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="Index"><i class="bi bi-speedometer2 me-1"></i>Dashboard</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Claims" asp-action="Index"><i class="bi bi-journal-text me-1"></i>Claims</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Documents" asp-action="Index"><i class="bi bi-paperclip me-1"></i>Documents</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Approvals" asp-action="Index"><i class="bi bi-check2-square me-1"></i>Approvals</a></li>
                        <li class="nav-item"><a class="nav-link" asp-controller="Home" asp-action="About"><i class="bi bi-info-circle me-1"></i>About</a></li>
                    </ul>

                    <form class="d-flex" role="search">
                        <input class="form-control form-control-sm me-2 glass" type="search" placeholder="Search…" />
                        <button class="btn btn-sm btn-outline-light" type="button"><i class="bi bi-search"></i></button>
                    </form>
                </div>
            </div>
        </nav>
    </header>

    <main class="container my-4">
        @RenderBody()
    </main>

    <footer class="footer glass border-0 py-3 mt-5">
        <div class="container small d-flex justify-content-between">
            <span>© @DateTime.Now.Year Independent Institute of Education</span>
            <span class="text-muted">Prototype · UI only</span>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
