@{
    ViewData["Title"] = "Review Claim";
}
<div class="card shadow-sm">
    <div class="card-body">
        <h5 class="card-title">Review · J. Smith · Aug 2025</h5>
        <dl class="row">
            <dt class="col-sm-3">Hours</dt>
            <dd class="col-sm-9">14.0</dd>
            <dt class="col-sm-3">Rate</dt>
            <dd class="col-sm-9">R450</dd>
            <dt class="col-sm-3">Amount</dt>
            <dd class="col-sm-9">R6 300</dd>
        </dl>

        <div class="mb-3">
            <label class="form-label">Comment</label>
            <textarea class="form-control" rows="3" placeholder="Optional reviewer note"></textarea>
        </div>

        <div class="d-flex justify-content-end gap-2">
            <a asp-action="Index" class="btn btn-outline-secondary">Back</a>
            <button type="button" class="btn btn-success"><i class="bi bi-check2"></i> Approve</button>
            <button type="button" class="btn btn-outline-danger"><i class="bi bi-x-lg"></i> Reject</button>
        </div>
    </div>
</div>
